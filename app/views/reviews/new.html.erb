<br>
<div class="form container">
  <h3 class="pb-2">Write a review for <%= @user.name %></h3>
  <%= simple_form_for([@user, @review]) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
    <br>
    <%= f.submit "Add Review", class: "btn btn-primary" %>
  <% end %>
</div>
