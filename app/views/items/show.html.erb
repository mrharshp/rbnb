<div class="container">
  <div class="card shadow-sm p-3 mx-auto mb-4 bg-white rounded-sm" style="max-width: 1000px;">
    <div class="row no-gutters d-flex justify-content-center align-items-center flex-wrap">
      <div class="col-md-4">
        <%= cl_image_tag @item.photo, class: "card-img-top rounded-lg border border-info" %>
         <%  if @item.user != current_user %>
        <%= link_to "Add to Basket", user_my_basket_path(@item, @curren_user), class: "btn btn-primary my-2 btn-block" %>
        <%= link_to "Buy this Item!", new_item_purchase_path(@item, @user), class: "btn btn-primary my-2 btn-block" %>
        <% end %>
        <%= link_to "Back to Shopping", items_path, class: "btn btn-info my-2 btn-block" %>
        <% if policy(@item).edit? %>
          <%= link_to "Edit", edit_item_path, class: "btn btn-info my-2 btn-block" %>
        <% end %>
        <% if policy(@item).destroy? %>
          <%= link_to "Delete", item_path(@item), method: :delete, class: "btn btn-warning my-2 btn-block" %>
        <% end %>
      </div>
      <div class="col-md-5 d-flex flex-column">
        <div class="card-body">
          <h3 class="card-title" style="font-weight: bolder;"><%= @item.name %></h3>
          <h4 class="card-text">Seller Description: <%= @item.description %></h4>
          <h4 class="group-item">Listed Price: Â£ <%= @item.price %></h4>
          <h5 class="card-text"><small class="text-muted"><%= link_to "Sold by #{@item.user.name} --> Check out #{@item.user.name}'s Reviews!", user_reviews_path(@item.user) %></small></h5>
          <h5 class="card-text">
            <small class="text-muted">
              <% if @item.user != current_user %>
                <%= simple_form_for(@chatroom) do |f| %>
                  <%= hidden_field_tag :receiver_id, @item.user.id %>
                  <%= f.submit "Chat with #{@item.user.name}", class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </small>
          </h5>
        </div>
      </div>
      <div class="col-md-3">
        <div class="d-flex flex-column">
          <% if policy(@item).edit? %>
            <%= link_to "Edit", edit_item_path, class: "btn btn-info m-3" %>
          <% end %>
          <% if policy(@item).destroy? %>
            <%= link_to "Delete", item_path(@item), method: :delete, class: "btn btn-info m-3" %>
          <% end %>
          <%= link_to "Back to Shopping", items_path, class: "btn btn-info m-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
