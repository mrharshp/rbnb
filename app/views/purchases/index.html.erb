<br>
<div class="container">
  <h3>Hi <%= @user.name %>, check your purchases! </h3>
  <h6>You have <%= @purchases.count %>
    <% if @purchases.count == 1 %>
      purchase:
    <% else %>
      purchases:
    <% end %>
  </h6>
</div>
<% @purchases.each do |purchase| %>
  <div class="container card-my-purchases">
    <div class="card-my-purchases-image" style="background-image: url('<%= cl_image_path purchase.item.photo %>')">
    </div>
    <div class="card-my-purchases-infos">
      <h1><%= purchase.item.name %></h1>
      <h2>Â£ <%= purchase.item.price %></h2>
    </div>
    <div class="card-my-purchases-status m-3">
      <p>Date of purchase: <%= purchase.item.created_at.strftime("%d/%m/%Y at %I:%M%p") %></p>
      <p>Your order is in progress.</p>
      <p><%= link_to "You bought this item from #{purchase.item.user.name} --> Check out #{purchase.item.user.name}'s Reviews!", user_reviews_path(purchase.item.user) %></p>
    </div>
  </div>
<% end %>
